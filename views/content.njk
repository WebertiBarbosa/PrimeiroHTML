    <section class="cards">
        {% for item in items %}
        <div class="card" id="{{item.id}}">
            <div class="cards-image-container">
                <img src="{{item.id}}.svg" alt="Imagem de {{item.id}}">
            </div>
            <div class="card-content">
                <p id="{{item.id}}-p"><strong>{{item.description}}</strong></p>
                <p>{{item.description1}}</p>
                <p>{{item.description2}}</p>
            </div>
            <div class="card-info">
                <p>{{item.duration}}</p>
                <p class="card-price">{{item.price}}</p>

            </div>
            
        </div>
        {% endfor %}

    </section>

    
    <script src="scripts.js"></script>

{% endblock %}


